@model Inventory.Models.Warehouse

@{
    ViewData["Title"] = "Create";
}



<h2 class="text-info">Create Warehouse</h2>

<form method="post">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" autofocus autocomplete="off" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Branch"></label>
            </div>
            <div class="col-5">
                <input asp-for="Branch" class="form-control" autofocus autocomplete="off" />
            </div>
            <span asp-validation-for="Branch" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Address"></label>
            </div>
            <div class="col-5">
                <input asp-for="Address" class="form-control" autofocus autocomplete="off" />
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="City"></label>
            </div>
            <div class="col-5">
                <input asp-for="City" class="form-control" autofocus autocomplete="off" />
            </div>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="State"></label>
            </div>
            <div class="col-5">
                <input asp-for="State" class="form-control" autofocus autocomplete="off" />
            </div>
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Country"></label>
            </div>
            <div class="col-5">
                <input asp-for="Country" class="form-control" autofocus autocomplete="off" />
            </div>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>


        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
